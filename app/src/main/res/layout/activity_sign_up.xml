<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backround"
    tools:context=".signupPage.SignUpActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="129dp"
        android:layout_height="45dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="76dp"
        android:fontFamily="@font/lora"
        android:text="@string/hello"
        android:textColor="@color/text"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="260dp"
        android:layout_height="77dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/lora"
        android:text="@string/signUp"
        android:textColor="@color/text"
        android:textSize="55sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="330dp"
        android:layout_height="104dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="232dp"
        android:layout_marginEnd="41dp"
        android:inputType="text"
        app:boxStrokeColor="@color/text"
        app:hintTextColor="@color/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <EditText
            android:id="@+id/editTextTextEmailAddress2"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="16dp"
            android:drawableStart="@drawable/baseline_email_24"
            android:ems="10"
            android:hint="@string/mail"
            android:textColorHighlight="@color/text"
            android:textColorHint="@android:color/darker_gray" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordEditText"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="330dp"
        android:layout_height="104dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="41dp"
        android:ems="10"
        android:inputType="textPassword"
        app:boxStrokeColor="@color/text"
        app:endIconMode="password_toggle"
        app:errorIconDrawable="@null"
        app:hintTextColor="@color/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="16dp"
            android:drawableStart="@drawable/baseline_lock_24"
            android:hint="@string/password"
            android:textColorHighlight="@color/text" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordEditTextConfirm"
        android:layout_width="330dp"
        android:layout_height="104dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="41dp"
        android:ems="10"
        android:inputType="textPassword"
        app:boxStrokeColor="@color/text"
        app:endIconMode="password_toggle"
        app:errorIconDrawable="@null"
        app:hintTextColor="@color/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordEditText">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextTextPassword2"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="16dp"
            android:drawableStart="@drawable/baseline_lock_24"
            android:hint="@string/confirmPassword"
            android:textColorHighlight="@color/text" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.constraintlayout.utils.widget.ImageFilterButton
        android:id="@+id/imageFilterButton4"
        android:layout_width="39dp"
        android:layout_height="49dp"
        android:layout_marginTop="44dp"


        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageFilterButton5"
        app:layout_constraintTop_toBottomOf="@+id/singUp"
        app:srcCompat="@drawable/linkedin" />

    <androidx.constraintlayout.utils.widget.ImageFilterButton
        android:id="@+id/imageFilterButton3"
        android:layout_width="39dp"
        android:layout_height="49dp"

        android:layout_marginTop="44dp"

        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/imageFilterButton5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/singUp"
        app:srcCompat="@drawable/facebook" />

    <androidx.constraintlayout.utils.widget.ImageFilterButton
        android:id="@+id/imageFilterButton5"
        android:layout_width="39dp"
        android:layout_height="49dp"
        android:layout_marginTop="44dp"
        android:scaleType="fitCenter"

        app:layout_constraintEnd_toStartOf="@+id/imageFilterButton4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageFilterButton3"
        app:layout_constraintTop_toBottomOf="@+id/singUp"
        app:srcCompat="@drawable/instagram" />

    <Button
        android:id="@+id/singUp"
        android:layout_width="312dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/text"
        android:text="@string/signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/or"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordEditTextConfirm" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginTop="344dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>